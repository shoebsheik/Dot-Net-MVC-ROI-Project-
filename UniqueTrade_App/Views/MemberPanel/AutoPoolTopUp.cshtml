    <script>

                    function getUserName() {
                        var spEmail = $("#UserName").val();
                        if (spEmail != "") {
                            $.get('@Url.Action("getFirstUser", "MemberPanel")?sp_user=' + spEmail + '', function (responce) {
                                if (responce.UserName == "") {
                                    $("#sp-invalid").css("display", "block");
                                }
                                else {
                                    //alert(responce.Memb_Name);
