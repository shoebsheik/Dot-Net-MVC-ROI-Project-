@model IEnumerable<UniqueTrade_App.Models.UserLevelModel>
@using UniqueTrade_App.CommanFunction;
@{
    UserInfo userInfo = Common.CurrentUserInfo;
    ViewBag.Title = "TeamDownlineReport";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

<!--#INCLUDE FILE= "header.asp"-->
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="">Downline Team</a></li>
                <li class="breadcrumb-item"><a href="/MemberPanel/index">Home</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Downline Team</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Sr.No</th>
                                        <th>joining Date</th>
                                        <th>Activation Date</th>

                                        <th>User ID</th>
                                        <th>User Name</th>
                                        <th>Sponsor ID</th>
                                        <th>Sponsor Name</th>
                                        <th>Level</th>
                                        <th>Email ID</th>
                                        <th>Mobile Number</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int rows = 0;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(rows = rows + 1)</td>
                                            <td>@item.reg_date</td>
                                            <td>@item.activation_date</td>
                                            <td>@item.username</td>
                                            <td>@item.memb_name</td>
                                            <td>@item.sp_user</td>

                                            <td>@item.sp_name</td>
                                            @*<td>@item.Place</td>*@
                                            @*<td>BUSD @item.Total_Business</td>
                <td>@item.credit_date</td>*@
                                            <td>@item.level_no</td>
                                            <td>@item.email</td>
                                            <td>@item.mobile_number</td>
                                            <td>
                                                @if (item.Total_Business == "0.0")
                                                {
                                                    <span>Inactive</span>
                                                }
                                                else
                                                {
                                                    <span style="font-weight:bolder">Active</span>
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--#INCLUDE FILE= "footer.asp"-->




