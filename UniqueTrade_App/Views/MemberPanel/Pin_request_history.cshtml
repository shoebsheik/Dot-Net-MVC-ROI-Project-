@model IEnumerable<UniqueTrade_App.Models.PINDETAILSMODEL>
@using UniqueTrade_App.CommanFunction;

@{
    UserInfo userInfo = Common.CurrentUserInfo;
    ViewBag.Title = "Request Pin history";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}
<section id="main-content" class=" ">
    <div class="wrapper main-wrapper row">

        <div class="col-xs-12">
            <div class="page-title">
                <div class="hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/MemberPanel/index"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="#">Pin</a>
                        </li>
                        <li class="active">
                            <strong>Pin Request History</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>

        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->

        <div class="clearfix"></div>
        <div class="col-12 mt-25">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pin Request History</h3>
                </div>
                <div class="card-body">
                    <table id="example" class="table table-striped table-bordered table-responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Date</th>
                                <th>Quantity</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>


                        </thead>
                        <tbody>
                            @{ int rows = 0;}
                            @foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td>@(rows = rows + 1)</td>
                                    <td>@item.Tdate</td>
                                    <td>@item.Quantiy</td>
                                    <td>₹ @item.amount</td>
                                    <td>@item.u_flag</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA ENDS -->

    </div>
</section>
