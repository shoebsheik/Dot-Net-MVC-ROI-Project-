@model UniqueTrade_App.Models.ChangePasswordModel
@using UniqueTrade_App.CommanFunction;
@{
    UserInfo userInfo = Common.CurrentUserInfo;
    ViewBag.Title = "PasswordChange";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}


<!--#INCLUDE FILE= "header.asp"-->
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="">Change Password</a></li>
                <li class="breadcrumb-item"><a href="/MemberPanel/index">Home</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Change Password</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            @if (TempData["ChangePassAlert"] != null)
                            {
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="alert alert-success alert-dismissible" style="height:50px;">
                                        @TempData["ChangePassAlert"]
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    </div>
                                </div>
                            }

                            @using (Html.BeginForm("PasswordChange", "MemberPanel", FormMethod.Post, new { @class = "forms-sample", enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true)
                        <div class="mb-3">
                            <label class="form-label">Old Password</label>
                            @Html.PasswordFor(model => model.OldPass, new { @onkeypress = "return isPassword(event);", @class = "form-control input-defaul", @placeholder = "Enter Old Password" })
                            @Html.ValidationMessageFor(model => model.OldPass, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            @Html.PasswordFor(model => model.NewPass, new { @onkeypress = "return isPassword(event);", @class = "form-control input-defaul", @placeholder = "New password  " })
                            @Html.ValidationMessageFor(model => model.NewPass, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Re-enter Password</label>
                            @Html.PasswordFor(model => model.ConfirmPass, new { @onkeypress = "return isPassword(event);", @class = "form-control input-defaul", @placeholder = "Re-enter new password" })
                            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "text-danger" })
                        </div>
                                <button type="submit" id="submit" name="submit" class="btn btn-primary">Submit</button>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--#INCLUDE FILE= "footer.asp"-->

