<script>
                $("#chkSponser").click(function () {
                    if (this.checked == true) {
                        $.get('@Url.Action("getFirstUser", "Home")', function (responce) {
                            $("#sp_user").val(responce.Memb_Name);
                            $("#sponsorName").val(responce.sp_user);
                            $("#sp-invalid").css("display", "none");
                        });
                    }
                    else {
                        $("#sponsorName").val('');
                        $("#sp_user").val('');
                    }
                });

                function getUserName() {

                    var spEmail = $("#sp_user").val();

                    if (spEmail != "") {
                        $.get('@Url.Action("getFirstUser", "Home")?sp_user=' + spEmail + '', function (responce) {
                            if (responce.sp_user == "") {
                                //$("#sp-invalid").css("display", "block");
                                $("#sponsorName").val("Invalid Sponesr Id");
                            }
                            else {
                                //$("#sp-invalid").css("display", "none");
                                $("#sp_user").val(responce.Memb_Name);
                                $("#sponsorName").val(responce.sp_user);
                            }
                        });
                    }
                    else {
                        $("#sp-invalid").css("display", "none");
                        $("#sponsorName").val('');
                        $("#sp_user").val('');
                    }
                }
</script>
<script>
                $("#chkCountry").click(function () {
